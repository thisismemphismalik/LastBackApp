#:import magnify static.magnify

<Update>
    name: "Update"

    MDFloatLayout:
        id: under
        size_hint: None, None
        size: Window.size
        pos_hint: {"center_x": .5, "center_y": .5}


        MDBoxLayout:
            id: base
            orientation: "vertical"
            pos_hint: {"center_x": .5, "center_y": .5}
            md_bg_color: 0,0,0,.05

            MDIconButton:
                id: back
                level: 1
                icon: "close-circle-outline"
                pos_hint: {"right": .9}
                user_font_size: 35
                on_release:
                    root.go_back()

            Search:


<Search>
    size_hint: .8, 1
    md_bg_color: 1,1,1,1
    pos_hint: {"center_x": .5}
    radius: [25, 25, 0, 0]
    padding: [0, 10, 0, 0]
    orientation: "vertical"
#    TODO: add hint helper for seller, id, date, name, category,
    MDLabel:
        text: "Search an event"
        adaptive_height: True
        halign: "center"
        font_size: 25
#        bold: True

    MDTextField:
        text: "Search"
        size_hint_x: .8
        pos_hint: {"center_x": .5}
        multiline: True
        adaptive_height: True
        halign: "center"
        on_focus: magnify(self, "Search")

    MDBoxLayout:
        adaptive_height: True
        md_bg_color: 0,0,0,.5
        opacity: .1
        orientation: "vertical"


#:import magnify static.magnify

<Update>
    name: "Update"

    MDFloatLayout:
        id: under
        size_hint: None, None
        size: Window.size
        pos_hint: {"center_x": .5, "center_y": .5}


        MDBoxLayout:
            id: base
            orientation: "vertical"
            pos_hint: {"center_x": .5, "center_y": .5}
            md_bg_color: 0,0,0,.05

            MDIconButton:
                id: back
                level: 1
                icon: "close-circle-outline"
                pos_hint: {"right": .9}
                user_font_size: dp(35)
                on_release:
                    root.go_back()

            Search:


<Search>
    size_hint: .8, 1
    md_bg_color: 1,1,1,1
    pos_hint: {"center_x": .5}
    radius: [dp(25), dp(25), dp(0), dp(0)]
    padding: [dp(0), dp(10), dp(0), dp(0)]
    orientation: "vertical"
#    TODO: add hint helper for seller, id, date, name, category,
    MDLabel:
        text: "Search an event"
        adaptive_height: True
        halign: "center"
        font_size: dp(25)
#        bold: True

    MDTextField:
        id: search
        text: "Search"
        size_hint_x: .8
        pos_hint: {"center_x": .5}
        adaptive_height: True
        halign: "center"
        on_focus: magnify(self, "Search")
        on_text_validate: root.search(self)

    MDBoxLayout:
        adaptive_height: True
        orientation: "vertical"
        padding: [dp(10), dp(0)]

        MDLabel:
            text: "you can search by id, seller, date, name or category.\ne.g. id: 1234567890"
            adaptive_height: True
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0,0,0,.3

    MDBoxLayout:
        

    Widget:
<TicketBanner>
    elevation: 0
    size_hint_y: None
    height: 40
    orientation: "vertical"

    MDBoxLayout:
        padding: [10, 0]

        MDLabel:
            size_hint_x: None
            width: 45
            text: root.quantity
            halign: "center"

        MDLabel:
            text: root.type
#            md_bg_color: 1,0,0,.3

        MDLabel:
            text: root.price

        MDIconButton:
            icon: root.icon
            theme_text_color: "Custom"
            text_color: [1,0,0,.7] if self.icon == "close-circle-outline" else [0,0,1,.7]
            pos_hint: {"center_y": .5}
            on_release:
                root.close() if self.icon == "close-circle-outline" else None
                root.show() if self.icon == "information-outline" else None

    MDSeparator:
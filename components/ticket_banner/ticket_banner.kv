<TicketBanner>
    elevation: 0
    size_hint_y: None
    height: 40
    padding: [10, 0]

    MDBoxLayout:

        MDLabel:
            size_hint_x: None
            width: 45
            text: root.quantity
            halign: "center"

        MDLabel:
            text: root.name
#            md_bg_color: 1,0,0,.3

        MDLabel:
            text: root.price

        MDIconButton:
            icon: root.icon
            theme_text_color: "Custom"
            text_color: 1,0,0,.7
            pos_hint: {"center_y": .5}